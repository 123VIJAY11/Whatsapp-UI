<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="7dp">

    <ImageView
        android:id="@+id/pp1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/whatsapp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendName"
        android:text="Nama"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/pp1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendText"
        android:text="Chat"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/grey"
        android:layout_toRightOf="@id/txtFriendCtg"
        android:layout_below="@id/txtFriendName" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendCtg"
        android:text="Ctg"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/grey"
        android:layout_below="@id/txtFriendName"
        android:layout_toRightOf="@id/pp1"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendCtgg"
        android:text="Ctg"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/bluectg"
        android:layout_below="@id/txtFriendName"
        android:layout_toRightOf="@id/pp1"/>


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="waktu"
        android:textColor="@color/grey"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey"
        android:layout_below="@id/txtFriendText"
        android:layout_toRightOf="@id/pp1"/>



</RelativeLayout>
